<%- include("header") -%>

<div class="box" id="heading">
  <h1 id="heading"><%= listOfWorks %></h1>
</div>

  <div class="box">
    <% newListItems.forEach(function(item){ %>
      <form action="/delete" method="post">
      <div class="item">
          <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
        <p><%= item.name %></p>
      </div>
      <input type="hidden" name="listName" value="<%= listOfWorks %>"></input>

      </form>
    <% }) %>
    <form class="item" action="/" method="post">
      <input class="box" type="text" name="newItem" placeholder="Add List" autocomplete="off">
      <button type="submit" name="list" value="<%= listOfWorks %>">+</button>
    </form>
  </div>

<%- include("footer") -%>
